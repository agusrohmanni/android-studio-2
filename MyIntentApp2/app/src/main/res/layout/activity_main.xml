<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/MainActivity"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

   <Button
       android:id="@+id/btn_pindah"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="8dp"
       android:text="@string/move_activity"/>

   <Button
       android:id="@+id/btn_pindahData"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="@string/move_with_data"/>

   <Button
       android:id="@+id/btn_pidahObject"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="@string/move_with_object"/>

   <Button
       android:id="@+id/btn_Diall"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:text="@string/dial_number"/>

   <Button
       android:id="@+id/btn_Pganda"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="@string/move_with_result"
       android:layout_marginBottom="16dp"/>

   <TextView
       android:id="@+id/tv_HasilActivity"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:gravity="center"
       android:textSize="24sp"
       android:textStyle="bold"
      android:text="@string/result_from_activity"/>



</LinearLayout>